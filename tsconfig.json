{
   "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "lib": [
         "es6"
      ],
      "allowJs": true,
      "outDir": "./build",
      "rootDir": "src",
      "strict": true,
      "strictPropertyInitialization": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "sourceMap": true,
      // Advanced Options
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      // "moduleResolution": "node",
   }
}